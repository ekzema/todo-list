
<!-- BEGIN Modal new TODO list -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Create TODO List</h4>
      </div>
      <%= form_for(@todolist, remote: true,  :html => {class: "formTodo"}) do |f| %>  
      <div class="modal-body">
        <%= f.label "title", class: 'control-label' %> 
    <%= f.text_field :name, class: 'form-control' %> 
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
       <%= f.submit "Сохранить список", class: "btn btn-primary  " %>
      </div>
      <% end %> 
    </div>
  </div>
</div>
<!-- END Modal new TODO list -->




<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">

    <button type="button" class="btn btn-primary newListButton" data-toggle="modal" data-target="#myModal">Add TODO List</button>
      <% if flash[:alert] %>
          <div class="alert alert-error" style="text-align:center;">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <%= flash[:alert] %></div>
      <% end %>
      <% if flash[:notice] %>
          <div class="alert alert-success" style="text-align:center;">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <%= flash[:notice] %>
          </div>
      <% end %>
      <span>Вы вошли как: </span><span class="label label-success"><%= current_user.email %></span> - <%= link_to "Выход", destroy_user_session_path, method: :delete %>
    </div>
  </div>
</div>


